---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <section class="top">
    <div class="imge">
      <img
        src="..//temaBilleder/saettekasser.webp"
        alt="Tanja meed sættekasse"
      />
    </div>

    <div class="tekst">
      <p class="find">Skræddersy din egen personlige</p>
      <h1>SÆTTEKASSE</h1>
    </div>
  </section>
</MainLayout>

<style>
  .top {
    display: grid;
  }

  .imge,
  .tekst {
    grid-area: 1/1;
  }

  img {
    width: 100%;
  }

  .tekst {
    display: flex;
    flex-direction: column;

    /* text-align: center;
    z-index: 2;
    place-self: center;
    color: white; */
  }
  .find {
    font-size: 1rem;
  }
  h1 {
    font-size: 1.5rem;
  }
</style>
