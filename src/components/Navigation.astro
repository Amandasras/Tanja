---
import "../styles/style.css";
---

<header>
  <button class="hamburger" aria-label="Toggle Menu">
    <span></span>
    <span></span>
    <span></span>
  </button>
  <nav class="menu">
    <button class="close-menu" aria-label="Close Menu">
      <span></span>
      <span></span>
    </button>
    <ul class="links">
      <li><a href="/kurser">KURSER</a></li>
      <li><a href="/produkt">PRODUKTER</a></li>
      <li><a href="/ommig">OM MIG</a></li>
    </ul>
  </nav>
</header>

<style>
  .links a {
    color: black;
    font-size: 3.5rem;
    text-decoration: none;
    text-transform: uppercase;
  }
  li a:hover {
    color: rgb(106, 10, 10);
  }
  .links {
    margin-top: 5%;
  }

  @media screen and (max-width: 1000px) {
    header {
      display: flex;
      justify-content: flex-end;
      padding: 1rem;
      color: rgb(255, 255, 255);
    }

    .hamburger {
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      align-items: center;
      width: 2.5rem;
      height: 2rem;
      padding: 0;
      background-color: transparent;
      border: none;
      cursor: pointer;
      position: relative;
      z-index: 2;
    }

    .hamburger span {
      display: block;
      width: 100%;
      height: 4px;
      background-color: rgb(0, 0, 0);
      transition: all 0.3s ease-in-out;
    }

    .menu {
      position: fixed;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      z-index: 1;
      opacity: 0;
      visibility: hidden;
      background-color: #f9f6f4;
      display: flex;
      justify-content: center;
      align-items: center;
      transition: all 0.3s ease-in-out;
    }

    .menu.active {
      z-index: 1;
      opacity: 1;
      visibility: visible;
    }

    .close-menu {
      position: absolute;
      top: 2rem;
      right: 2rem;
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      align-items: center;
      width: 2rem;
      height: 1.5rem;
      padding: 0;
      background-color: transparent;
      border: none;
      cursor: pointer;
      z-index: 3;
    }

    .links {
      list-style: none;
      margin-bottom: 0;
      padding: 4rem;
      text-align: left;
      z-index: 2;
    }

    .links li {
      margin-bottom: 3rem;
    }

    .links a {
      color: black;
      font-size: 2.5rem;
      text-decoration: none;
      text-transform: uppercase;
    }
  }
</style>

<script>
  const hamburger = document.querySelector(".hamburger");
  const menu = document.querySelector(".menu");
  const links = document.querySelectorAll(".links");

  hamburger.addEventListener("click", () => {
    menu.classList.toggle("active");
  });
</script>

